<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cnb.projects.shuffledex">

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.cnb.projects.shuffledex.utils.ApplicationData"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_black"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.cnb.projects.shuffledex.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="ANDROID.INTENT.ACTION.SEARCH" />
                <action android:name="android.intent.action.view" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.fragment.DonationActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="pokemon.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="10" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.cnb.projects.shuffledex.model.Pokemon,
        com.cnb.projects.shuffledex.model.Skill, com.cnb.projects.shuffledex.model.Element" />
    </application>

</manifest>
